<!DOCTYPE html>
<head>
	<!-- Bootstrap CSS CDN -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/octicons/4.4.0/font/octicons.css" rel="stylesheet">
	<link rel="stylesheet" href="/analysis.css">

	  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
	  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

	<script src="https://code.highcharts.com/stock/highstock.js"></script>


	<title>Analysis</title>
</head>

<body>

  	<img class="bg" src="/img2.png">

  	<div id="title" class="text-center">
	    <h1>PORTFOLIO ANALYSIS</h1>
	    <hr/>
	</div>
	
	<div class="row">
		<div class="col-md-6 col-sm-12" id="portfolio">
			<!--pie chart of portfolio-->
		</div>

		<div class="col-md-12 col-sm-12 row" id="suggestions">
			<!--we suggest you-->
			<div class="col-sm-2"></div>
			<div class="col-sm-4">
				<h2 class="mg">for your investment in</h2>
				<!-- LOOP HERE -->
				<hr><p class="suggest">APPLE</p>
				<hr><p class="suggest">MICROSOFT</p>
				<hr><p class="suggest">ADOBE</p>
				<hr>
			</div>
			<div class="col-sm-4">
				<h2 class="mg">we suggest that you</h2>
				<!-- LOOP HERE -->
				<hr><p class="suggest HOLD">-</p>
				<hr><p class="suggest SELL">SELL, STRONGLY</p>
				<hr><p class="suggest BUY">-</p>
				<hr>
			</div>
			<div class="col-sm-2"></div>
		</div>

		<div class="row">
			<div class="col-sm-12" id="charts">
				<!--Graphs-->
				<h1>TECHNICAL ANALYSIS</h1>
				<div id="myCarousel" class="carousel slide" data-ride="carousel" data-pause='true'>

				  <!-- Wrapper for slides -->
				  <div class="carousel-inner">

				  	<% for(var i=0; i < graphs.length; i++) { %>
					<div class="carousel-item <% if(i==0) { %> active <%}%>">
						<div id="graph1-<%=i%>">
						</div>
						<div id="graph2-<%=i%>">
						</div>
						<div id="graph3-<%=i%>">
						</div>
				    </div>
				    <% } %>

				   </div>

				  <!-- Indicators -->
				 <!--  <ol class="carousel-indicators">
				    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				  </ol> -->

				  <!-- Left and right controls -->
				 <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</div>
				

				<script>
					$('.carousel').carousel({
					  interval: 2000 * 10
					});
				</script>

			</div>
		</div>

			<div class="col-md-6 col-sm-12" id="sentiments">
				<!--first summaries of overall sentiments oward each company-->
				<!--then top tweets; maybe like 2-4 of them ranked by # followers-->
			</div>
		</div>
	</div>

	<script>
		<% graphs.forEach(function(graph, i) { %>
			intervals = Highcharts.stockChart('graph1-<%=i%>', {
				rangeSelector: {
					selected: 5
				},
				chart: {height: 600},
				title: {
					text: "Stock Price | Rolling STD EMA"
				},
				navigator: { enabled: false },
				series: <%- JSON.stringify(graph[0]) %>
			});

			emas = Highcharts.stockChart('graph2-<%=i%>', {
				rangeSelector: {
					selected: 5
				},
				title: {
					text: "Stock Price | EMA-12 | EMA-26"
				},
				navigator: { enabled: false },
				series: <%- JSON.stringify(graph[1]) %>
			});

			macd = Highcharts.stockChart('graph3-<%=i%>', {
				rangeSelector: {
					selected: 5
				},
				title: {
					text: "MACD | EMA-9 of MACD"
				},
				yAxis: { plotLines: [{
					color: '#000000',
					value: <%- JSON.stringify(graph[2][0].interval) %>
				}, {
					color: '#000000',
					value: <%- JSON.stringify(-graph[2][0].interval) %>
				}]},
				series: <%- JSON.stringify(graph[2]) %>
			});
			<% }); %>

		$('#graph1-<%=i%>').mouseup(function(event) {
			var x = macd.xAxis[0].getExtremes();
			intervals.xAxis[0].setExtremes(x.min, x.max, true, false);
			emas.xAxis[0].setExtremes(x.min, x.max, true, false);
		});
	</script>

	</script>
</body>